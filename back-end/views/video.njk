{% extends "layout.njk" %}

{% block head %}
        <title>{{item.title}}</title>
    {% endblock%}

{% block content %}
    <div id="wrapper" class="video">
        <h1>{{item.title}}</h1>
    </div><!--wrapper-->

    <section class="video">
            <div class="card" id="{{item.id}}">
                <div class="card_video_container">
                    <iframe src="http://youtube.com/embed/{{item.id}}" frameborder="0" ></iframe>
                </div><!--card_video_container-->

                <div class="card_content">
                    <p>{{item.title}}</p>
                </div><!--card_content-->

                <div class="card_inf">
                    <p>{{item.duration}}</p>
                    <p class="card_price">{{item.price}}</p>
                </div><!--card_inf-->
            </div><!--card-->
    </section><!--video-->
{% endblock %}

{% block script%}
     <script src="https://kit.fontawesome.com/f4dd9ff78b.js" 
    crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
{% endblock %}