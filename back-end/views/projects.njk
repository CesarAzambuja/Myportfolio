{% extends "layout.njk" %}

{% block head %}
        <title>Projetos</title>
    {% endblock%}

{% block content %}
    <div id="wrapper">
        <h1>Projetos</h1>
    </div><!--wrapper-->

    <section class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card_img_container {{'featured-wrapper' if item.featured}}">
                    <img src="{{item.image}}" alt="imagem de {{item.title}}">
                   {% if item.featured%} 
                        <div class="featured">featured</div>
                   {% endif%}
                </div><!--card_img_container-->

                <div class="card_content">
                    <p>{{item.title}}</p>
                </div><!--card_content-->

                <div class="card_inf">
                    <p>{{item.duration}}</p>
                    <p class="card_price">{{item.price}}</p>
                </div><!--card_inf-->
            </div><!--card-->
        {% endfor %}
        
    </section><!--cards-->

    <div class="modal_overlay">
        <div class="modal">
            <a class="close_modal">
                <i class="far fa-times-circle"></i>
            </a>
            <div class="modal_content">
                
                
            </div><!--modal_content-->

        </div><!--modal-->

        
    </div><!--modal_overlay-->

{% endblock %}

{% block script%}
     <script src="https://kit.fontawesome.com/f4dd9ff78b.js" 
    crossorigin="anonymous"></script>
    <script src="/js/scripts.js"></script>
{% endblock %}